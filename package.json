{
  "name": "quickbase-explorer",
  "displayName": "Quickbase Explorer",
  "description": "Explore the Quickbase database",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:quickbase-explorer.helloWorld",
    "onCommand:quickbase-explorer.configureQuickbaseApp",
    "onView:quickbaseTables"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
        {
            "id": "quickbaseApp.conf",
            "title": "Configure Quickbase Application",
            "properties": {
                "quickbaseApp.conf.realm": {
                    "type": "string",
                    "description": "Your Quickbase realm."
                },
                "quickbaseApp.conf.applicationId": {
                    "type": "string",
                    "description": "Your Quickbase application ID."
                },
                "quickbaseApp.conf.userToken": {
                    "type": "null",
                    "description": "Your Quickbase user token.",
                    "markdownDescription": "[Set user token](quickbaseApp.conf.userToken)"
                }
            }
        }
    ],
    "commands": [
      {
        "command": "quickbase-explorer.helloWorld",
        "title": "Quickbase Explorer"
      },
      {
        "command": "quickbase-explorer.configureQuickbaseApp",
        "title": "Configure Quickbase"
      },
      {
        "command": "quickbase-explorer.fieldInfo",
        "title": "Field Info"
      },
      {
        "command": "quickbase-explorer.editField",
        "title": "Edit Field"
      },
      {
        "command": "quickbase-explorer.editFormulaField",
        "title": "Edit Formula Field"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "quickbaseTables",
          "name": "Quickbase Tables"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "quickbase-explorer.editField",
          "when": "view == quickbaseTables && viewItem == field && viewItem.mode == formula",
          "group": "inline"
        },
        {
          "command": "quickbase-explorer.editFormulaField",
          "when": "view == quickbaseTables && viewItem == formulaField",
          "group": "inline"
        }
      ]
    },
    "languages": [{
        "id": "quickbase-formula",
        "aliases": ["Quickbase Formula", "quickbase-formula"],
        "extensions": [".qbf"],
        "configuration": "./syntaxes/quickbase-formula.language-configuration.json"
    }],
    "grammars": [{
        "language": "quickbase-formula",
        "scopeName": "source.quickbase-formula",
        "path": "./syntaxes/quickbase-formula.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0",
    "rxjs": "^7.5.7"
  }
}
